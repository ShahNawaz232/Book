<section class="section-2 container-fluid p-0">
  
   <div class="purchase text-center">
        <h1>{{ content.field_purchase_title }}</h1>
        <p class="purchase_p1">
         {{ content.field_purchase_p1 }} 
        </p>
        <div class="cards">
          <div class="d-flex flex-row justify-content-center flex-wrap">
             {% for key,value in content.field_purchase_h1['#items'] %}
            <div class="card">
              <div class="card-body">
                <div class="title">
                  <h5 class="card-title">{{ content.field_purchase_h1[key] }}</h5>
                </div>
                <p class="card-text">
               {{ content.field_purchase_p2[key] }}
                </p>
                <div class="pricing">
                <h1> {{ content.field_purchase_price[key] }}</h1>
               
                <div class="btn btn-dark text-danger px-5 py-2 primary-btn mb-5">
                 
                  {{ content.field_purchase_link[key] }}
                   </div>
                </div>
              </div>
            </div>
         {% endfor %}
          </div>
        </div>
      </div>
  
  
</section>